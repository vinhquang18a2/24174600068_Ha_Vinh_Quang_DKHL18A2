import math 
pi = 3.14
r = float(input("Nhập bán kính hình trụ (r): "))
h = float(input("Nhập chiều cao hình trụ (h): "))
dien_tich_xung_quanh = 2 * pi * r * h
dien_tich_toan_phan = 2 * pi * r * (r+h)
the_tich = pi * r**2 * h 
print(f"Diện tích xung quanh: {dien_tich_xung_quanh:.2f}")
print(f"Diện tích toàn phần: {dien_tich_toan_phan:.2f} ")
print(f"Thể tích: {the_tich:.2f}")